{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "rootDir": "src",
      "outDir": "js",
      "rootDirs": [
        "src"
      ],
      "typeRoots": [
        "./types",
        "node_modules/@types"
      ]
    },
    "lib": ["es2015", "dom"],
    "types": [
      "chrome",
      "node"
    ],
    "exclude": [
      "src/wasm/*",
      "js/*",
      "dist/*",
      "webpack.config.js"
    ]
}